<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OperationButton">
        <item name="android:textColor">@color/orange</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:background">@drawable/button_state</item>
    </style>

    <style name="NumberButton">
        <item name="android:textColor">@color/black</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:background">@drawable/button_state</item>
    </style>

    <style name="EqualButton">
        <item name="android:background">@drawable/equal_button_states</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>